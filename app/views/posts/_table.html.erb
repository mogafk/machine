
<table style='width: device-width';
>
  <thead>
    <tr>
      <th>User</th>
      <th>Body</th>
      <th>Status</th>
      <th>lat</th>
      <th>lng</th>
      <th>Address</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post, user| %>
      <tr>
        <td><%= post.user_id %></td>
        <td><%= post.body %></td>
        <td><%= post.status %></td>
        <td><%= post.lat %></td>
        <td><%= post.lng %></td>
        <td><%= post.address %></td>
        <td><%= link_to 'Show', post %></td>
        <% if current_user.admin? %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% elsif current_user.id == post.user_id %>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        
        <%  end %>
      </tr>
    <% end %>
  </tbody>
</table>